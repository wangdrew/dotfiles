config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

bind d:ctrl;cmd push right bar-resize:screenSizeX/2
bind a:ctrl;cmd push left  bar-resize:screenSizeX/2
bind w:ctrl;cmd push left    bar-resize:screenSizeX*.34
bind x:ctrl;cmd push right  bar-resize:screenSizeX*.66
bind s:ctrl;cmd move screenOriginX;screenOriginY screenSizeX;screenSizeY
bind r:ctrl;cmd corner top-left resize:screenSizeX;screenSizeY*.675
bind v:ctrl;cmd corner bottom-left resize:screenSizeX;screenSizeY*.33

bind q:ctrl;cmd corner top-left     resize:screenSizeX/2;screenSizeY/2
bind e:ctrl;cmd corner top-right    resize:screenSizeX/2;screenSizeY/2
bind z:ctrl;cmd corner bottom-left  resize:screenSizeX/2;screenSizeY/2
bind c:ctrl;cmd corner bottom-right resize:screenSizeX/2;screenSizeY/2

bind 1:ctrl;cmd throw 0
bind 2:ctrl;cmd throw 1
bind 3:ctrl;cmd throw 2

bind esc:cmd hint
